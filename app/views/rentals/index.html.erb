


<h1>Listing rentals</h1>
<%= link_to 'New Rental', new_rental_path %>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Price</th>
      <th>Bedroom</th>
      <th>Amenities</th>
      <th>Description</th>
      <th>Area</th>
      <th>Agent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%= image_tag rental.image.url(:thumb) %></td>
        <td><%= rental.price %></td>
        <td><%= rental.bedroom %></td>
        <td><%= rental.amenities %></td>
        <td><%= rental.description %></td>
        <td><%= rental.area %></td>
        <td><%= rental.agent.email %></td> <%# change to username%>
        <td><%= link_to 'Show', rental %></td>
        
        <%# if rental.agent == current_agent? %>
          <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
          <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%# end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


